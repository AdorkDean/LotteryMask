<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_enter"
        android:layout_marginEnd="@dimen/mar_16"
        android:paddingEnd="@dimen/mar_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:paddingStart="@dimen/mar_10"
        android:src="@drawable/ic_right_arrow"/>
    <TextView
        android:id="@+id/tv_title"
        android:text=""
        android:layout_marginTop="@dimen/mar_8"
        android:layout_marginStart="@dimen/mar_16"
        android:minEms="5"
        android:textColor="@color/black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_marginTop="@dimen/mar_8"
        android:layout_toEndOf="@+id/tv_title"
        android:textColor="@color/black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mar_8"
        android:layout_toStartOf="@+id/img_enter"
        android:gravity="center_vertical|end"
        android:text=""/>


    <LinearLayout
        android:id="@+id/ll_points"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="@dimen/mar_8"
        android:layout_marginTop="@dimen/mar_6"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/mar_25">
        <TextView
            android:layout_width="@dimen/mar_25"
            android:layout_height="@dimen/mar_25"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/mar_3"/>
        <TextView
            android:layout_width="@dimen/mar_25"
            android:layout_height="@dimen/mar_25"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/mar_3"/>
        <TextView
            android:layout_width="@dimen/mar_25"
            android:layout_height="@dimen/mar_25"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/mar_3"/>
        <TextView
            android:layout_width="@dimen/mar_25"
            android:layout_height="@dimen/mar_25"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/mar_3"/>

        <TextView
            android:layout_width="@dimen/mar_25"
            android:layout_height="@dimen/mar_25"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/mar_3"/>
        <TextView
            android:layout_width="@dimen/mar_25"
            android:layout_height="@dimen/mar_25"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/mar_3"/>
        <TextView
            android:layout_width="@dimen/mar_25"
            android:layout_height="@dimen/mar_25"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/mar_3"/>
        <TextView
            android:layout_width="@dimen/mar_25"
            android:layout_height="@dimen/mar_25"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginEnd="@dimen/mar_3"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_total"
        android:text=""
        android:layout_alignTop="@+id/ll_points"
        android:layout_toStartOf="@+id/img_enter"
        android:layout_width="wrap_content"
        android:gravity="center_vertical|end"
        android:layout_height="@dimen/mar_25" />

    <View
        android:layout_below="@+id/ll_points"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"/>
</RelativeLayout>
