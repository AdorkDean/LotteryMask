<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="1dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/bar_img_left"
            android:layout_width="@dimen/action_bar_button_width"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="?android:attr/actionBarItemBackground"
            android:src="@drawable/ic_back_xbase"/>

        <TextView
            android:id="@+id/bar_tv_left"
            android:layout_width="@dimen/action_bar_button_width"
            android:layout_height="match_parent"
            android:background="?android:attr/actionBarItemBackground"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/bar_tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:paddingStart="@dimen/mar_6"
            android:paddingEnd="@dimen/mar_6"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/bar_tv_right"
            android:layout_width="@dimen/action_bar_button_width"
            android:layout_height="match_parent"
            android:text=""
            android:background="?android:attr/actionBarItemBackground"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/bar_img_right"
            android:layout_width="@dimen/action_bar_button_width"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="?android:attr/actionBarItemBackground"
            android:visibility="invisible"/>

    </LinearLayout>

</merge>

