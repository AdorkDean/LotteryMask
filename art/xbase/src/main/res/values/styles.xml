<resources>

    <style name="Toolbar" parent="XAppTheme">
        <item name="tabPaddingBottom">-1dp</item>
        <item name="tabPaddingTop">-1dp</item>
        <item name="tabPaddingStart">-1dp</item>
        <item name="tabPaddingEnd">-1dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
    </style>

    <style name="XAppFullscreen" parent="XAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="XAppWelcomeBg" parent="XAppTheme">
        <!--冷启动背景图片-->
        <item name="android:windowBackground">@drawable/window_bg_xbase</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="colorPrimaryDark">@color/white</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="XAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/green_app</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/background</item>
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <!--<item name="android:clipToPadding">false</item>
        设置false的时候则滑动的时候取消paddingTop的距离-->

        <!--<item name="android:clipChildren">false</item>
        设置false的时候则滑动的时候取消子控件在父的paddingTop的距离-->

        <!--
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        -->
    </style>

    <style name="XDialogTranslucent" parent="XAppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <!--dialog的下一层是否置暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LoadingDialog" parent="Theme.AppCompat">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
    </style>

    <style name="Dialog_style_fill_width" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:windowNoTitle">true</item>  //是否显示title
    </style>

</resources>
